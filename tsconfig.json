{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@stores/*": ["./src/lib/stores/*"],
      "@services/*": ["./src/lib/services/*"],
      "@types": ["./src/types"],
      "@ztm-types": ["./src/ztm-types"]
    }
  }
}
