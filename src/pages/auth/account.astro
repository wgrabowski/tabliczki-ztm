---
import Layout from "../layouts/Layout.astro";
import AppLayout from "../layouts/AppLayout.svelte";
import AccountManagement from "../components/auth/AccountManagement.svelte";
import BackToDashboardButton from "../components/BackToDashboardButton.svelte";

// This page requires authentication
// When middleware is implemented, it will redirect to /auth/login if not authenticated
// For now, we'll use a placeholder email

// TODO: Replace with actual user data from session
const userEmail = "user@example.com";
---

<Layout>
  <AppLayout client:load>
    <BackToDashboardButton slot="header-left" client:load />

    <main class="account-page">
      <div class="account-container">
        <header class="account-header">
          <h1 class="account-title">Ustawienia konta</h1>
        </header>

        <div class="account-content">
          <AccountManagement userEmail={userEmail} client:load />
        </div>
      </div>
    </main>
  </AppLayout>
</Layout>

<style>
  .account-page {
    min-height: 100vh;
    padding: calc(var(--theme--spacing) * 4);
  }

  .account-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: calc(var(--theme--spacing) * 6);
  }

  .account-header {
    text-align: center;
    padding-bottom: calc(var(--theme--spacing) * 4);
    border-bottom: 1px solid var(--theme--accent-color-dim);
  }

  .account-title {
    font-size: 2rem;
    font-weight: normal;
    margin: 0;
    color: var(--theme--accent-color);
  }

  .account-content {
    padding: calc(var(--theme--spacing) * 6);
    background-color: var(--theme--bg-color);
    border: 1px solid var(--theme--accent-color-dim);
  }

  @media (max-width: 640px) {
    .account-page {
      padding: calc(var(--theme--spacing) * 2);
    }

    .account-title {
      font-size: 1.5rem;
    }

    .account-content {
      padding: calc(var(--theme--spacing) * 4);
    }
  }
</style>
